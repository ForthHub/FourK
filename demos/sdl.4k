    rcell add-handle
    
    " libc.so" lib " printf" sym
    1 rcells add-handle
    
    " libdl.so" lib " dlerror" sym 
    0 rcells add-handle
    
    " /usr/lib/libSDL.so" lib " SDL_SetVideoMode" sym 
    4 rcells add-handle
;

: yeah ( -- )
